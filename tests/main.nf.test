nextflow_pipeline {

    name "Test Workflow main.nf"
    script "main.nf"

    test("Just check samplesheet and read visium to adata") {

        tag "samplesheet"

        when {
            params {
                input = "../../../tests/samplesheet-test.csv"
                deconvolve {
                    external = false
                    bayestme = false
                    cogaps   = false
                    rctd     = false
                }
                analyze {
                    spacemarkers = false
                    squidpy = false
                }
                outdir = "output"
                max_memory = "8.GB"
                max_cpus = 4
            }
        }

        then {
            assertAll (
                { assert workflow.success },
                { assert file("${outputDir}/pipeline_info/samplesheet.valid.csv").exists() }
            )

        }

    }

        test("Fail on empty samplesheet") {

        tag "samplesheet"

        when {
            params {
                input = "../../../tests/samplesheet-empty-test.csv"
                max_memory = "8.GB"
                max_cpus = 4
            }
        }

        then {
            assert workflow.success == false
        }

    }

