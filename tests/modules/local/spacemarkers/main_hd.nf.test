nextflow_process {
    name    "Test SPACEMARKERS HD"
    script  "modules/local/spacemarkers/nextflow/main_hd.nf"
    process "SPACEMARKERS_HD"

    test("Should generate spacemarkers HD for valid input") {

        tag "process"
        tag "spacemarkers"
        tag "visiumhd"

        when {
            params {
                max_memory = '8.GB'
                max_cpus   = 2
            }
            process {
                """
                input[0] = [[id:"sample"],
                            file("${projectDir}/tests/data/hdvisium/hdvisium_cellular_compositions.csv"),
                            file("${projectDir}/tests/data/hdvisium/binned_outputs/square_016um")]
                """
            }
        }

        then {
            assert process.success
            assert process.out.IMscores
            assert process.out.LRscores
        }
    }
}