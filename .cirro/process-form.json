{
    "ui": {},
    "form": {
        "title": "BTC 10X Visium Pipeline",
        "type": "object",
        "properties": {
            "preprocessing":{
                "title": "Preprocessing options",
                "type": "object",
                "properties":{
                    "n_top_genes": {
                        "type": "integer",
                        "title": "Number of Top Genes (by var) to keep",
                        "default": 1000
                    },
                    "bleeding_correction": {
                        "type": "boolean",
                        "title": "Enable Bleeding Correction"
                    }
                }
            },
            "deconvolution": {
                "title": "Deconvolution options",
                "type": "object",
                "properties": {
                    "reference_scrna": {
                        "type": "string",
                        "title": "Reference scRNA-seq h5ad dataset (only for BayesTME)",
                        "description": "Filemask to look for in the sample directory, i.e. 'reference.h5ad'"
                    },
                    "n_cell_types": {
                        "type": "integer",
                        "title": "Number of Cell Types"
                    },
                    "run_bayestme": {
                        "type": "boolean",
                        "title": "Run BayesTME"
                    },
                    "run_cogaps": {
                        "type": "boolean",
                        "title": "Run CoGAPS"
                    },
                    "find_annotations": {
                        "type": "boolean",
                        "title": "Look for External Spot Annotations (e.g. CODA)"
                    }
                }
            },
            "spatial":{
                "title": "Spatial options",
                "type": "object",
                "properties": {
                    "spatial_transcriptional_programs": {
                        "type": "boolean",
                        "title": "Enable BayesTME Spatial Transcriptional Programs"
                    },
                    "run_spacemarkers": {
                        "type": "boolean",
                        "title": "Enable SpaceMarkers"
                    }
                }
            }
        }
    }
}

